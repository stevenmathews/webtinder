@import url(http://fonts.googleapis.com/css?family=Montserrat:400,700)

normalize-base()

gray = #383939
orange = #DE6C2A

html
  font-size 16px

body
  background-image url("squares.png")
  font-family 'Montserrat', sans-serif
  font-size 62.5%
  .s-alert-success
  .s-alert-error
    font-size 1.6em

header
  height 10em
  background-color gray
  img
    height 10em
    float left
  h1
    font-size 3em
    color orange
    margin 0em
    position: relative;
    top: 50%;
    transform: translateY(-50%);
  #login-buttons
    font-size 1.5em
    margin-right 1em
    float right
    color white
    .login-display-name
    .login-button
      font-family 'Montserrat', sans-serif

.wrapper
  lost-center 96em

  #sign-in-text
  #get-token-text
    font-size 1.6em
    area white
    h3
      color orange
      text-align center

  #get-token-text
    li
      margin-top 1.5em
      a
        color orange
    input
      margin 2em 1.2em 0em 0em
      width 80%
      height 2em
    input:focus
      outline 0.22em solid orange
    #submit-token-url
      button(orange, 12%, white)

  .recommendation
    font-size 1.6em
    area white
    lost-utility clearfix

    .buttons
      margin-top 2em

    #pass:active
    #like:active
      hover-pop 1.2 0deg true

    #pass
      button(red, 15%, white)

    #like
      float right
      button(green, 15%, white)

    .details
      margin 1.5em 0em

    .photos
      img
        lost-waffle 1/2